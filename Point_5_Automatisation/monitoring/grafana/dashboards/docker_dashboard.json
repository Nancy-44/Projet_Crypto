{
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage (per container)",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{image!=\"\"}[1m]) * 100",
          "legendFormat": "{{container_label_com_docker_compose_service}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU %",
          "min": 0,
          "max": 100
        }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage (per container)",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{image!=\"\"} / 1024 / 1024",
          "legendFormat": "{{container_label_com_docker_compose_service}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "megabytes",
          "label": "Memory (MB)",
          "min": 0
        }
      ]
    },
    {
      "type": "graph",
      "title": "Network Receive (per container)",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{image!=\"\"}[1m])",
          "legendFormat": "{{container_label_com_docker_compose_service}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes/sec",
          "label": "Bytes/sec",
          "min": 0
        }
      ]
    },
    {
      "type": "graph",
      "title": "Network Transmit (per container)",
      "targets": [
        {
          "expr": "rate(container_network_transmit_bytes_total{image!=\"\"}[1m])",
          "legendFormat": "{{container_label_com_docker_compose_service}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "bytes/sec",
          "label": "Bytes/sec",
          "min": 0
        }
      ]
    }
  ],
  "schemaVersion": 36,
  "version": 1,
  "title": "Docker Containers Monitoring"
}
